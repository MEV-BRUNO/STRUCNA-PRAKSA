@using Strucna.Baza_povezivanje
@using Strucna.Models

@{
    ViewBag.Title = "editStudent";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    strucnapraksa baza = new strucnapraksa();

    Studij studiToUse = baza.Smjerovi.SingleOrDefault(s => s.id_studij == Model.id_studij);


   
}
 
@model Strucna.Models.Student


<body class="padTop53 ">
<!--PAGE CONTENT -->
<div id="content">
<div class="inner">
<div class="row">
    <div class="col-lg-12">


    </div>
</div>
<hr />
<div class="col-lg-3">


           
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Prezime i ime studenta</th>
                    <th>Adresa</th>
                    <th>Aktivan</th>
                    <th>Studij</th>
                    <th>Redovni</th>

                </tr>
            </thead>
            <tbody>




                <tr>
                    <td class="col-md-1">@(Model.id_studnet)</td>
                    <td class="col-md-3">@(Model.ime_prezime)  </td>
                    <td class="col-md-2">@(Model.adresa)</td>
                    <td class="col-md-2">
                        @if (Model.aktivan == 1)
                        {
                            @Html.Raw("DA");
                        }
                        else
                        {

                            @Html.Raw("NE");
                        }
                </td>
                <td class="col-md-1">@studiToUse.naziv</td>
                <td class="col-md-2">
                    @if (Model.izvanredni == 0)
                    {
                        @Html.Raw("DA");
                    }
                    else
                    {

                        @Html.Raw("NE");
                    }
            </td>

        </tr>


    </tbody>
    </table>
    @Html.ActionLink("Vrati se ", "o_praksi", new { @class = "btn btn-link" })
    </div>
        </div>
    </div>
</div>

</body>
