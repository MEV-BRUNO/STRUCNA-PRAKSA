
@{
    Layout = null;
    strucnapraksa baza = new strucnapraksa();
    var listaStudij = new List<SelectListItem>();

    List<Studij> lista = baza.Smjerovi.ToList();


    foreach (Studij studij in lista)
    {
        listaStudij.Add(new SelectListItem
        {
            Value = studij.id_studij.ToString(),

            Text = studij.naziv

        });
    }
}
@using System.Web.Mvc;
@using Strucna.Baza_povezivanje
@using Strucna.Models
@model Strucna.Models.Mentor

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/css/StyleSheet1.css" rel="stylesheet" />
    <title>Zaboravljena lozinka</title>
</head>

<body>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <a href='@Url.Action("Index","Home")'>
                        <img src="~/assets/img/logo.png" class="center-block" alt="" />
                    </a>

                    <div class="margina">
                        <p class="well well-sm" style="background: #0d70b7; color:white; text-align: center; ">Ispunite podatke za registraciju</p>
                        <p>
                            @Html.LabelFor(model => model.ime_prezime, new { @class = "control-label" })
                            @Html.EditorFor(model => model.ime_prezime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ime_prezime, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            @Html.LabelFor(model => model.email, new { @class = "control-label" })
                            @ViewBag.email
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            @Html.LabelFor(model => model.lozinka, new { @class = "control-label" })
                            @ViewBag.lozinka
                            @Html.PasswordFor(model => model.lozinka, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.lozinka, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            @Html.LabelFor(model => model.ConfirmLozinka, new { @class = "control-label" })
                            @ViewBag.lozinka
                            @Html.PasswordFor(model => model.ConfirmLozinka, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmLozinka, "", new { @class = "text-danger" })
                        </p>
                        <p>
                            @Html.LabelFor(model => model.id_studij, new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.id_studij, listaStudij, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_studij, "", new { @class = "text-danger" })
                        </p>





                            <button class="btn btn-success">Registracija</button>

                    </div>
                </div>
            }

            @section Scripts {
                @Scripts.Render("~/Scripts/jquery.validate")
            }
            <div class="row">

                <div class="login" style="float:initial">

                    <div class="col-sm-3">
                        <a href="login">Prijava  </a>
                    </div>

                    <div class="col-sm-3">
                        <a href="lozinka">Zaboravio lozinku  </a>
                    </div>

                    <div class="col-sm-3">
                        <a style="text-decoration: underline" href="#">Registracija mentor  </a>
                    </div>

                    <div class="col-sm-3">
                        <a href="reg_student">Registracija student</a>
                    </div>
                </div>
            </div>




        </div>
        <div class="col-sm-4"></div>
    </div>
</body>

</html>

