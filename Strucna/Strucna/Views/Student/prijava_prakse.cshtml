@{

    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    strucnapraksa baza = new strucnapraksa();
    var listPraksa = new List<SelectListItem>();

    List<Praksa> lista = baza.Prakse.ToList();


    foreach (Praksa p in lista)
    {
        listPraksa.Add(new SelectListItem
        {
            Value = p.id_praksa.ToString(),

            Text = p.naziv

        });
    }

    var listPoduzeca = new List<SelectListItem>();

    List<Poduzece> list = baza.Poduzeca.ToList();


    foreach (Poduzece pod in list)
    {
        listPoduzeca.Add(new SelectListItem
        {
            Value = pod.id_poduzece.ToString(),

            Text = pod.naziv

        });
    }
}
